  <form class="" action="/sights" method="post">

    <label for="sight-name">Sight name:</label>
    <input id="sight-name" type="text" name="name" />

    <label for="city-select">Select a city:</label>
    <select id="city-select" name="city_id">
      <% @cities.each do |city| %>
        <option value=<%= city.id %>><%= city.name %></option>
        <% end %>
      </select>


      <input type='submit' value="Add Sight"/>

    </form>
